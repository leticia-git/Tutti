      <main class="container">
        <section class="mt-3" id="users">
        
    
          <form action="/users/save" method="POST">
            <div class="form-row">
              <div class="form-group col-sm-12">
                <label for="input-nome">Nome</label>
                <input type="text" class="form-control" name="name" id="input-nome" placeholder="Insira seu nome">
              </div>
              <div class="form-group col-sm-12">
                <label for="input-email">E-mail</label>
                <input type="email" class="form-control" name="email" id="input-email" placeholder="Email@exemplo.com">
              </div>
              <div class="form-group col-sm-12">
                <label for="input-senha">Senha</label>
                <input type="password" class="form-control" name="password" id="input-senha" placeholder="Insira sua senha">
              </div>
            </div>
            <% if (typeof added !== "undefined") { %>
              <div class="form-group col-md-12 alert alert-success">
                Usuário cadastrado com sucesso
              </div>
            <% } %> 
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>
        </section>
      </main>

