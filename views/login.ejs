  <body class="login">
    <title>Login</title>
    <main class="container">
    <section class="mt-3 ">
      <div class="mx-auto " style="width: 300px;">
        <a href="/"><img src="/images/Logo-8.png" class="img-fluid"  alt="..."></a>
      </div>
      
      <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">                        
              <p class="text-center">Bem vindos!</p>
            </div>
        </div>
        <section id="cover" >
          <div id="cover-caption">
              <div class="container">
                  <div class="row">
                      <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
                          <div class="px-2">
                             
      <form action="/users/authenticate" method="POST">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="input-senha">E-mail</label>
            <input type="email" class="form-control" name="email" id="input-email" placeholder="Email@exemplo.com">
          </div>
          <div class="form-group col-md-12">
            <label for="input-senha">Senha</label>
            <input type="password" class="form-control" name="password" id="input-senha" placeholder="Insira sua senha">
          </div>
        </div>
        <% if (typeof notFound !== "undefined") { %>
          <div class="form-group col-md-12 alert alert-danger">
            E-mail ou senha inv√°lidos
          </div>
        <% } %> 
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </section>
