
<%- include('./partials/head'); %>  
<%- include('./partials/header'); %>  

    <header>
        <div class="container">
            <div class="row">
              <div class="col-sm">
                  <h2><%= product.name %></h2>

                <img class="img-fluid" src="<%=product.picture%>" style="border-radius:20px ;">
                <p style="font-size: 20px;">R$ <%= product.price.toFixed(2) %></p>
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1">
                    <label class="custom-control-label" for="customSwitch1">Kilos</label>
                  </div>
                  <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1">
                    <label class="custom-control-label" for="customSwitch1">Gramas</label>
                  </div>
                  <form class="form-inline">
                    <button type="submit" class="btn btn-primary mb-2"> - </button>
                    <div class="form-group mx-sm-1 mb-2" >
                   
                      <label for="inputPassword2" class="sr-only" width="10px">0</label>
                      <input type="password" class="form-control" id="inputPassword2" placeholder="0">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">+</button>
                </form>
                <a href="checkout"><button type="submit" class="btn btn-primary mb-2">Adicionar ao carrinho</button></a>
              </div>
              <div class="col-sm">
                <img class="img-fluid"  id="tabelamaça"src="<%=product.nutrition%>" width="300px">
              </div>
            </header>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <h2 class="text-center">Outros produtos de <%= product.provider.name %> </h2>
              <div class="container">
                <div class="row">
                  <div class="col-sm" id="feira">
                    <div class="row">
                      <div class="col">
                          <% vendorSugestion.forEach(product => { %>   
                            <div class="card text-center" style="width: 8rem; height: 8rem;">
                              <img src="<%=product.picture%>" class="card-img-top" alt="...">
                              <div class="card-body">
                                <p class="card-text" id="preço" style="color: black;"><%=product.name%></p>
                                <p class="card-text" id="preço" style="color: rgb(70, 69, 69);">R$ <%=product.price%> /Kg</p>
                                <a href="/product/<%=product.id%>" class="btn btn-primary">Comprar</a>
                              </div>
                            </div>
                          <% }) %>
                        </div>   
                      </div>
                  </div>
                </main>
                  <%- include('./partials/wpp') %> 
                  <%- include('./partials/footer') %> 
  </body>
</html>